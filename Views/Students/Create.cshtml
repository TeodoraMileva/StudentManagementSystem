@model StudentManagementSystem.ViewModels.Students.CreateVM
@{
    ViewBag.Title = "CREATE STUDENT";
}
<fieldset>
    <legend>CREATE STUDENT</legend>
    <form action="/Students/Create" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.FirstName)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.FirstName)
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.LastName)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.LastName)
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Specialty)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Specialty)
                    @Html.ValidationMessageFor(m => m.Specialty)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Year)
                </div>
                <div class="col-2">
                    @Html.DropDownListFor(m => m.Year,
                            Enumerable.Range(1, 4).
                            Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))

                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Username)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Username)
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="col-2">
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="right">
                        <a href="/Students/Index" class="backbutton">Back</a>
                        <input type="submit" value="Save" class="savebutton"/>
                    </div>
                </div>
            </div>
        </div>
    </form>
</fieldset>

